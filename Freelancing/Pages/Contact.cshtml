@page
@model Freelancing.Pages.Contact.ContactModel
@{
    ViewData["Title"] = "Contact Me";
}

<div class="container page-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold mb-3">Get In Touch</h1>
                <p class="lead text-muted">Ready to discuss your project? I'd love to hear from you!</p>
            </div>

            <div class="row g-4">
                <div class="col-lg-8">
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-success mb-4">
                            <strong>Success!</strong> @Model.Message
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ServiceName))
                    {
                        <div class="alert alert-info mb-4">
                            <strong>Service Interest:</strong> @Model.ServiceName
                        </div>
                    }

                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-envelope me-2"></i>Send Message
                            </h5>
                        </div>
                        <div class="card-body p-4">
                            <!form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="Input.Name" class="form-label fw-semibold">Full Name</label>
                                        <input asp-for="Input.Name" class="form-control" placeholder="Your full name" />
                                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Input.Email" class="form-label fw-semibold">Email Address</label>
                                        <input asp-for="Input.Email" class="form-control" placeholder="your@email.com" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Input.PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Your phone number" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Input.Message" class="form-label fw-semibold">Message</label>
                                    <textarea asp-for="Input.Message" class="form-control" rows="6" placeholder="Tell me about your project..."></textarea>
                                    <span asp-validation-for="Input.Message" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Input.ServiceInterest" class="form-label fw-semibold">Service Interest (Optional)</label>
                                    <input asp-for="Input.ServiceInterest" class="form-control" placeholder="Which service are you interested in?" />
                                </div>
                                
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-paper-plane me-2"></i>Send Message
                                    </button>
                                </div>
                            <!/form>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body p-4">
                            <h5 class="card-title