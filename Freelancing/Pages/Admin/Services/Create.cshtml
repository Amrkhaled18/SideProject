@page
@model Freelancing.Pages.Admin.Services.CreateModel
@{
    ViewData["Title"] = "Create Service";
}

<h1>Create New Service</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="Service.Name" class="form-label"></label>
                <input asp-for="Service.Name" class="form-control" />
                <span asp-validation-for="Service.Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Service.Type" class="form-label"></label>
                <select asp-for="Service.Type" class="form-control">
                    <option value="">Select service type</option>
                    <option value="Web Development">Web Development</option>
                    <option value="Mobile Development">Mobile Development</option>
                    <option value="Design">Design</option>
                    <option value="Consulting">Consulting</option>
                    <option value="E-commerce">E-commerce</option>
                    <option value="SEO">SEO</option>
                </select>
                <span asp-validation-for="Service.Type" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Service.Description" class="form-label"></label>
                <textarea asp-for="Service.Description" class="form-control" rows="5" 
                         placeholder="Detailed description of the service..."></textarea>
                <span asp-validation-for="Service.Description" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Service.Price" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Service.Price" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="Service.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Service.ImageUrl" class="form-label">Image URL (Optional)</label>
                        <input asp-for="Service.ImageUrl" class="form-control" type="url" 
                               placeholder="https://example.com/image.jpg" />
                        <span asp-validation-for="Service.ImageUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="Service.IsActive" class="form-check-input" />
                    <label asp-for="Service.IsActive" class="form-check-label">
                        Active (visible to customers)
                    </label>
                </div>
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create Service</button>
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Service Guidelines</h5>
                <ul class="small">
                    <li>Use clear and descriptive service names</li>
                    <li>Choose the most appropriate service type</li>
                    <li>Write detailed descriptions to help customers understand what's included</li>
                    <li>Set competitive pricing based on market rates</li>
                    <li>Add relevant images to make services more appealing</li>
                    <li>Keep services active to display them to customers</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}