@page
@model Freelancing.Pages.Admin.Services.DetailsModel
@{
    ViewData["Title"] = "Service Details";
}

<h1>Service Details</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Model.Service.Name</h5>
                <span class="badge @(Model.Service.IsActive ? "bg-success" : "bg-secondary")">
                    @(Model.Service.IsActive ? "Active" : "Inactive")
                </span>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Service.ImageUrl))
                {
                    <img src="@Model.Service.ImageUrl" class="img-fluid rounded mb-3" alt="@Model.Service.Name" style="max-height: 300px;">
                }
                
                <dl class="row">
                    <dt class="col-sm-3">Service Type:</dt>
                    <dd class="col-sm-9">@Model.Service.Type</dd>
                    
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@Model.Service.Description</dd>
                    
                    <dt class="col-sm-3">Price:</dt>
                    <dd class="col-sm-9"><span class="h5 text-primary">$@Model.Service.Price</span></dd>
                    
                    <dt class="col-sm-3">Created:</dt>
                    <dd class="col-sm-9">@Model.Service.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</dd>
                    
                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        @if (Model.Service.IsActive)
                        {
                            <span class="badge bg-success">Active - Visible to customers</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive - Hidden from customers</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Actions</h5>
                <div class="d-grid gap-2">
                    <a asp-page="./Edit" asp-route-id="@Model.Service.Id" class="btn btn-primary">Edit Service</a>
                    <a asp-page="./Delete" asp-route-id="@Model.Service.Id" class="btn btn-danger">Delete Service</a>
                    <a asp-page="/Services/Details" asp-route-id="@Model.Service.Id" class="btn btn-outline-info" target="_blank">
                        Preview Public Page
                    </a>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-body">
                <h6 class="card-title">Service Stats</h6>
                <p class="small text-muted">
                    <strong>Service ID:</strong> @Model.Service.Id<br>
                    <strong>Image:</strong> @(string.IsNullOrEmpty(Model.Service.ImageUrl) ? "No image" : "Has image")<br>
                    <strong>Description Length:</strong> @Model.Service.Description.Length characters
                </p>
            </div>
        </div>
    </div>
</div>