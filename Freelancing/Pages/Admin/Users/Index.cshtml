@page
@model Freelancing.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Manage Users";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Registered Users</h1>
    <span class="badge bg-info fs-6">Total Users: @Model.Users.Count</span>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Contact Information</th>
                            <th>Registration Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            @user.Name.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <strong>@user.Name</strong><br>
                                            <small class="text-muted">User ID: @user.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>Email:</strong> <a href="mailto:@user.Email">@user.Email</a><br>
                                        <strong>Phone:</strong> <a href="tel:@user.PhoneNumber">@user.PhoneNumber</a>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        @user.CreatedAt.ToString("MMMM dd, yyyy")<br>
                                        <small class="text-muted">@user.CreatedAt.ToString("h:mm tt")</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-success">Customer</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No users registered yet</h4>
                <p class="text-muted">Users will appear here when customers submit contact forms or payment requests.</p>
            </div>
        }
    </div>
</div>